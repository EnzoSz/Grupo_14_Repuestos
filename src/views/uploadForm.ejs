<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', {uploadFormCss: 'uploadForm' }) %>

    <body>
        <%- include('./partials/header.ejs') %>
            <main>
                <form class="form-login" action="" method="POST">
                    <div class="input-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" id="nombre" name="nombre" required />
                    </div>
                    <div class="input-group">
                        <label for="descripcion">Descripcion</label>
                        <textarea name="descripcion" id="descripcion" rows="5"></textarea>
                    </div>
                    <div class="input-group">
                        <label for="categoria">Categoria</label>
                        <input type="text" id="categoria" name="categoria" required />
                    </div>
                    <div class="input-group">
                        <label for="descripcion">Cantidad</label>
                        <input type="number" id="cantidad" name="cantidad" required />
                    </div>
                    <div class="input-container">
                        <div class="input-group">
                            <label for="color">Color</label>
                            <select name="color" id="color">
                                <option value="Negro">Negro</option>
                                <option value="Blanco">Blanco</option>
                                <option value="Azul">Azul</option>
                                <option value="Rojo">Rojo</option>
                            </select>
                        </div>
                        <div class="input-group">
                            <label for="size">Size</label>
                            <div class='radio-container'>
                                <div>
                                    <label for="small">S</label>
                                    <input type="radio" name="radio" id="small" value="small" checked>
                                </div>
                                <div>
                                    <label for="medium">M</label>
                                    <input type="radio" name="radio" id="medium" value="medium">
                                </div>
                                <div>
                                    <label for="large">L</label>
                                    <input type="radio" name="radio" id="large" value="large">
                                </div>
                                <div>
                                    <label for="xlarge">XL</label>
                                    <input type="radio" name="radio" id="xlarge" value="xlarge">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <input type="file">
                    </div>
                    <button type="submit" class="cargar">Cargar</button>
                </form>
            </main>
    </body>

</html>