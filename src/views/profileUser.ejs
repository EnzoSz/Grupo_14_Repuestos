<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', {homeCss: 'home', productCardCss: 'productCard', registerCss: 'register', userProfileCss: 'userProfile'}) %>
<body>
    <%- include('./partials/header') %>
    <main>
        <h1 class="title-register">MI CUENTA</h1>

      <form
        class="form-register"
        action=""
        method="GET"
        enctype="multipart/form-data"
      >
        <fieldset class="personal-info">
          <div class="container-input">
            <label for="name">Nombre:</label>
                <div class="color-information-user">
                    <%=  singleUser.nombre  %>
                </div>
          </div>
          <div class="container-input">
            <label for="name">Apellidos:</label>
                <div class="color-information-user">
                    <%=  singleUser.apellido  %>
                </div>
          </div>
          <div class="container-input">
            <label for="name">Nombre de Usuario:</label>
                <div class="color-information-user">
                    <%=  singleUser.nombreUsuario  %>
                </div>
          </div>
          <div class="container-input">
            <label for="name">Email:</label>
                <div class="color-information-user">
                    <%=  singleUser.email  %>
                </div>
          </div>
          <div class="container-input">
            <label for="name">Fecha de nacimiento:</label>
                <div class="color-information-user">
                    <%=  singleUser.fechaNacimiento  %>
                </div>
          </div>
          <div class="container-input">
            <label for="name">Domicilio:</label>
                <div class="color-information-user">
                    <%=  singleUser.domicilio  %>
                </div>
          </div>
        </fieldset>
        <!-- <button onclick="" type="submit" value="edit">Editar</button> -->
        <a class="form-edition-a" href="/user/profile/edit/<%= singleUser.id %>">Editar</a>
        <button type="reset" value="borrar">Eliminar Cuenta</button>
      </form>


        
    </main>
    <%- include("./partials/footer") %>
</body>
</html>