<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs', {uploadFormCss: 'uploadForm' }) %>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <form
        class="form-login"
        action="/products/edit/<%= product.id %>?_method=PUT"
        method="POST"
      >
        <div class="input-group">
          <label for="nombre">Nombre</label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            value="<%= product.nombre %>"
          />
        </div>
        <div class="input-group">
          <label for="descripcion">Descripcion</label>
          <textarea name="descripcion" id="descripcion" rows="5"><%= product.descripcion %></textarea>
        </div>
        <div class="input-group">
          <label for="categoria">Categoria</label>
          <input
            type="text"
            id="categoria"
            name="categoria"
            required
            value="<%= product.categoria %>"
          />
        </div>
        <div class="input-group">
          <label for="precio">Precio</label>
          <input type="number" id="precio" name="precio" required  value="<%= product.precio %>"/>
        </div>
        <% for( const propiedad in product.talles) { %>

        <div class="input-group">
          <label for="cantidad_<%= propiedad %>">Cantidad talle <%= propiedad %> :</label>
          <input
            type="number"
            id="cantidad_<%= propiedad %>"
            name="cantidades"
            required
            value="<%= product.talles[propiedad] %>"
          />
        </div>
        <% } %>
        <div class="input-container">
          <div class="input-group">
            <label for="color">Color</label>
            <select name="color" id="color">
              <option value="Negro">Negro</option>
              <option value="Blanco">Blanco</option>
              <option value="Azul">Azul</option>
              <option value="Rojo">Rojo</option>
            </select>
          </div>
        </div>
        <div class="input-group">
          <input type="file" />
        </div>
        <button type="submit" class="cargar">Guardar</button>
      </form>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
