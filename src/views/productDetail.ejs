<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs', {productDetailCss: 'productDetail'}) %>
<body>
    <%- include('./partials/header') %>
    <main>
        <!-- Datalle del producto -->
        <section class="product-detail">
            <div class="container-product-detail">
                <div class="container-img">
                    <img src="/assets/images/products/<%= product.imagen %>" alt="<%= product.nombre %>">
                </div>
                <div class="container-info">
                    <h2 class="product-name"><%= product.nombre %></h2>
                    <p class="product-description"><%= product.descripcion %></p>
                    <p class="product-price">$<%= product.precio %></p>
                    <div class="product-oferta">
                        <i class="fa-solid fa-credit-card"></i>
                        <p>Pag√° en 12 cuotas sin interes</p>
                    </div>
                    <div class="product-retiro">
                        <i class="fa-solid fa-location-dot"></i>
                        <p>Retiro en tienda</p>
                    </div>
                    <p class="product-talle">Selecciona tu talla</p>
                       
                    <form action="/carrito" method="POST">
                        <input type="hidden" name="id" value="<%= product.id %>">
                        <input type="hidden" name="name" value="<%= product.nombre %>">
                        <input type="hidden" name="price" value="<%= product.precio %>">
                        <input type="hidden" name="image" value="<%= product.imagen %>">
                        <div class="container-sizes">
                            <% for (let i = 0; i < product.talles.length; i++) { %>
                    
                                <div class="size">
                                    <input type="radio" name="size" id="size-<%= i %>" value="<%= product.talles[i].talle %>">
                                    <label for="size-<%= i %>"><%= product.talles[i].talle %></label>
                                </div>
                                
                            <% }  %>
                        </div> 
                        <button class="btn-primary" type="submit">Agregar al carrito</button>
                    </form>

                    <div class="container-btn-edit-product">
                        <a class="btn-edit" href="/products/edit/<%= product.id %>">Editar</a>
                        <form action="/products/delete/<%= product.id %>?_method=DELETE" method="post">
                            <button type="submit" class="btn-delete">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>