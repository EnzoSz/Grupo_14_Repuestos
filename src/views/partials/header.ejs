<script>
  function toggleMenu() {
    const menu = document.querySelector(".top-container-categories");
    const closeMenu = document.querySelector(".icon-close");
    if (menu.style.left === "-100%" || menu.style.left === "") {
      menu.style.left = "0";
    } else {
      menu.style.left = "-100%";
    }
  }
</script>
