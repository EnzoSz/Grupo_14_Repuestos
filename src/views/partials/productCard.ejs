<!-- articles con los productos mostrando las propiedades desde el products.json -->
  <article class="card-product">
    <div class="icon-fav">
      <div>
        <i class="far fa-heart"></i>
      </div>
    </div>
    <a href="products/detail/<%= product.id %>">
    
      <img
        src="/assets/images/products/<%= product.imagen %>"
        alt="<%= product.nombre %>"
      />
    </a>
    <div class="card-body">
      <h3 class="card-title"><%= product.nombre %></h3>
      <p class="card-precio">$<%= product.precio %></p>
      <button class="card-button">Agregar</button>
    </div>
  </article>

