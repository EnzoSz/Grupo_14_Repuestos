<!-- articles con los productos mostrando las propiedades desde el products.json -->

<% products.forEach((product) => { %>
<a class="container-cardProduct" href="products/detail/<%= product.id %>">
  <article class="card-product">
    <div class="icon-fav">
      <div>
        <i class="far fa-heart"></i>
      </div>
    </div>
    <img src="<%= product.imagen %>" alt="<%= product.nombre %>" />
    <div class="card-body">
      <h3 class="card-title"><%= product.nombre %></h3>
      <p class="card-precio">$<%= product.precio %></p>
    </div>
  </article>
</a>
<% }); %>
