<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs', {loginCss: 'login' }) %>

  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <form class="form-login" action="/user/login" method="POST">
        <div class="login-text">
          <h2>Iniciar Sesión</h2>
        </div>
        <div class="input-group">
          <input type="text" id="email" name="email" placeholder="Email"
            value="<%= locals.old && locals.old.email ? locals.old.email : '' %>"
            class="<%= locals.errors && locals.errors.email ? 'is-invalid' : '' %>"
          />
          <% if (locals.error && error.email) { %>
          <p class="text-danger">
            <%= error.email.msg %>
          </p>
          <% } %>
        </div>

        <div class="input-group">
          <input type="password" id="password" name="password" placeholder="Contraseña"/>
          <% if (locals.error && error.password) { %>
            <p class="text-danger">
              <%= error.password.msg %>
            </p>
            <% } %>
        </div>
        <div class="rememberMe">
          <label for="rememberMe">Recordarme</label>
          <input type="checkbox" id="rememberMe" name="rememberMe" />
        </div>
        <div class="option">
          <a href="/user/register">  No tienes cuenta? Registrate </a>
        </div>

        <button type="submit">Iniciar Sesión</button>
      </form>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
